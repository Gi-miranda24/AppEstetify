<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Estetify" parent="Theme.Material3.Light.NoActionBar">
        <!-- Cores principais do tema -->
        <item name="colorPrimary">@color/azul_escuro</item>
        <item name="colorPrimaryContainer">@color/azul_marinho</item>
        <item name="colorOnPrimary">@color/branco</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/azul_claro</item>
        <item name="colorSecondaryContainer">@color/azul</item>
        <item name="colorOnSecondary">@color/branco</item>

        <!-- Cores de superfície -->
        <item name="android:colorBackground">@color/branco</item>
        <item name="colorSurface">@color/cinza_claro</item>
        <item name="colorOnSurface">@color/azul_escuro</item>

        <!-- Cores para diálogos -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <!-- Barras do sistema -->
        <item name="android:statusBarColor">@color/azul_escuro</item>
        <item name="android:navigationBarColor">@color/azul_escuro</item>

        <!-- Ripple e estados -->
        <item name="colorPrimaryInverse">@color/azul_claro</item>
        <item name="colorSurfaceVariant">@color/cinza_claro</item>
        <item name="colorOnSurfaceVariant">@color/azul_escuro</item>
    </style>

    <!-- Estilo para diálogos -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/azul_claro</item>
        <item name="colorSurface">@color/branco</item>
        <item name="colorOnSurface">@color/azul_escuro</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyStyle</item>
    </style>

    <!-- Estilo para título do diálogo -->
    <style name="DialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/azul_escuro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para corpo do diálogo -->
    <style name="DialogBodyStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/azul_escuro</item>
    </style>

    <!-- Estilo para botão positivo -->
    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/azul_claro</item>
        <item name="rippleColor">@color/azul_claro</item>
    </style>

    <!-- Estilo para botão negativo -->
    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/azul_claro</item>
        <item name="rippleColor">@color/azul_claro</item>
    </style>

    <style name="Theme.Estetify" parent="Base.Theme.Estetify" />
</resources>
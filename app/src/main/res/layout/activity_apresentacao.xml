<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_escuro"
    tools:context=".MainApresentacao">

    <ImageView
        android:id="@+id/logotipo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/icone_logotipo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:elevation="2dp"
        android:alpha="0" />

    <TextView
        android:id="@+id/texto_rodape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_rodape"
        android:fontFamily="@font/fonte_inter"
        android:textSize="13sp"
        android:padding="32dp"
        android:textStyle="bold"
        android:textColor="@color/branco"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0" />

</androidx.constraintlayout.widget.ConstraintLayout>
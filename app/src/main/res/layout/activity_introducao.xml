<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".MainIntroducao">

    <Button
        android:id="@+id/botao_pular"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonte_inter"
        android:text="@string/pular"
        android:textColor="@color/azul_escuro"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        android:padding="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0" />

    <Button
        android:id="@+id/botao_voltar"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/fonte_inter"
        android:padding="4dp"
        android:text="@string/voltar"
        android:textColor="@color/azul_escuro"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0" />

    <Button
        android:id="@+id/botao_avancar"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/fonte_inter"
        android:padding="4dp"
        android:text="@string/avancar"
        android:textColor="@color/azul_escuro"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="384dp"
        android:layout_height="480dp"
        android:orientation="vertical"
        android:background="@drawable/fundo_bordas"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_um"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/apresentacao_image_um"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:src="@drawable/introducao_um"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"
            android:alpha="0" />

        <ImageView
            android:id="@+id/apresentacao_image_dois"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:src="@drawable/introducao_um"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"
            android:alpha="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_dois"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titulo_produtos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_produtos"
                android:fontFamily="@font/fonte_inter"
                android:textSize="18sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:textColor="@color/branco"
                android:textAlignment="textStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:alpha="0" />

            <TextView
                android:id="@+id/titulo_agendamentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_agendamentos"
                android:fontFamily="@font/fonte_inter"
                android:textSize="18sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:textColor="@color/branco"
                android:textAlignment="textStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:alpha="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_tres"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/texto_produtos"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:text="@string/texto_introducao_produtos"
            android:fontFamily="@font/fonte_inter"
            android:textSize="14.5sp"
            android:textColor="@color/branco"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="0" />

        <TextView
            android:id="@+id/texto_agendamentos"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:text="@string/texto_introducao_agendamentos"
            android:fontFamily="@font/fonte_inter"
            android:textSize="14.5sp"
            android:textColor="@color/branco"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>